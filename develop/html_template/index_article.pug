doctype html
html(lang="ja")
  include ./common/head.pug
  body
    .page-container

      include ./common/header.pug
      
      main.main-contents#contentsWrapper
        - var prevChap = -1, nextChap = -1
        if chapterNum
          if data.tutorials[chapterNum].number-1 >= 0
            - prevChap = data.tutorials[chapterNum].number-1
          if data.tutorials[chapterNum].number+1 <= 15
            - nextChap = data.tutorials[chapterNum].number+1
        .article-container(data-prev=prevChap data-next=nextChap)
          .
            !{article}
        if chapterNum
          a(href="" data-type="prev").chapter-link.chapter-link-prev
          a(href="" data-type="next").chapter-link.chapter-link-next
        
      include ./common/footer.pug
    include ./common/script.pug