{
  "name": "p5codeschool",
  "version": "1.0.0",
  "description": "ゼロから学べるProcessing入門サイト",
  "scripts": {
    "start": "npm run server & npm run watch",
    "server": "browser-sync start -c ./config/bs.config.js",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:js",
    "build:html": "cd develop && node build-html.js",
    "watch:html": "cd develop && node build-html.js -w",
    "build:css": "postcss ./develop/assets/css/style.pcss -c ./config/postcss.config.js -o ./public/assets/css/style.css",
    "watch:css": "postcss ./develop/assets/css/style.pcss -c ./config/postcss.config.js -o ./public/assets/css/style.css -w",
    "build:js": "webpack --config ./config/webpack.config.js",
    "watch:js": "webpack --config ./config/webpack.config.js -w"
  },
  "author": "@P5Aholic",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.23.6",
    "csswring": "^6.0.3",
    "highlight.js": "^9.12.0",
    "jstransformer-markdown-it": "^2.0.0",
    "marked": "^0.3.14",
    "postcss-cli": "^5.0.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-import": "^11.1.0",
    "postcss-media-minmax": "^3.0.0",
    "postcss-nested": "^3.0.0",
    "postcss-simple-vars": "^4.1.0",
    "pug": "^2.0.0-rc.4",
    "pug-cli": "^1.0.0-alpha6",
    "webpack": "^3.11.0"
  },
  "dependencies": {
    "barba.js": "^1.0.0",
    "gsap": "^1.20.4",
    "normalize.css": "^8.0.0",
    "ua-parser-js": "^0.7.17"
  }
}
